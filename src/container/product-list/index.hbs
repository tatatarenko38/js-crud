{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div>
  <section>
    <h1 class="title">Список товарів</h1>
    <div class="cards">
      {{#with data.products}}
      {{#if isEmpty}}
      <mark>Пустий</mark>
      {{else}}
      {{#each list}}
      {{!>product-card data}}
      <div class="product">
        <h2 class="product__name">{{name}}</h2>
        <p class="product__description">{{description}}</p>
        <p class="product__id">{{id}}</p>
        <div class="card__footer">
          <div class="product__price">{{price}}</div>
          <div><a href="#" class="product__edit"><span>Редагувати</span></a></div>
        </div>
      </div>
      {{/each}}
      {{/if}}
      {{/with}}
    </div>
  </section>
</div>

