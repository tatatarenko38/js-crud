{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
  {{#with data.purchase}}
  <form method="POST" action="/purchase-update?id={{id}}" class="form-card">
    {{>heading title="Зміна данних"}}


    <div>
      {{>form title="ID:" value=id}}
    </div>

    <div class="purchase-contact">
      {{>field label="Прізвище" value=lastname}}
      {{>field label="Ім'я" value=firstname}}
      {{>field label="Пошта" value=email}}
      {{>field label="Телефон" value=phone}}

    </div>

    <div>

      {{>button text="Зберегти дані"}}
    </div>
  </form>
  {{/with}}
</main>

